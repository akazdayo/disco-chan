---
const { code:string } = Astro.props;
---

<script define:vars={{ code:string }}>
    console.debug(code);
    if (!code) {
        console.error('コードがありませんでした。');
    }

    const login = async (code) => {
        const response = await fetch("/api/gettoken", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                code: code,
            }),
        });
        return response.json();
    };
    login(code).then((data) => {
        // TODO: HttpOnlyをつけよう！
        document.cookie = `token=${data.session}; max-age=${data.max_age}; samesite=strict; path=/; secure=true;`;
        window.location.href = "/";
    }).catch((error) => {
        console.error(error);
    });
</script>