---
import Post from "@/components/posts/post.astro";
import { GetPosts } from "@/lib/prisma";

const posts = await GetPosts();
---

<div class="flex flex-col">
    {
        posts.map((post) => {
            return (
                <Post
                    user={post.userid}
                    message={post.message}
                    time={post.created_at.toLocaleString()}
                    tags={post.tags}
                    postid={post.id}
                />
            );
        })
    }
</div>
