generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model posts {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now())
  userid     BigInt
  is_public  Boolean
  tags       String[]
  message    String
}

model users {
  id       BigInt @id // Discord„ÅÆUserID
  username String
  icon     String // URL
}

model tokens {
  session    String   @id
  access     String
  userid     BigInt
  refresh    String
  expires_at DateTime
}
